<h1>Listing Pages</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Views</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for page <- @pages do %>
    <tr>
      <td><%= page.title %></td>
      <td><%= page.body %></td>
      <td><%= page.views %></td>

      <td>
        <span><%= link "Show", to: Routes.admin_page_path(@conn, :show, page) %></span>
        <span><%= link "Edit", to: Routes.admin_page_path(@conn, :edit, page) %></span>
        <span><%= link "Delete", to: Routes.admin_page_path(@conn, :delete, page), method: :delete, data: [confirm: "Are you sure?"] %></span>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<span class="inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 border border-blue-700 rounded mb-8"><%= link "New Page", to: Routes.admin_page_path(@conn, :new), class: " hover:text-white" %></span>
